@model Company
<form method="post">
    <input aasp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">delete Company</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0">the Company name</label>
            <input asp-for="Name" type="text" class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="StreetAddress" class="p-0">the Company street address</label>
            <input asp-for="StreetAddress" type="text" class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="City" class="p-0">company city</label>
            <input asp-for="City" type="text" class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="State" class="p-0">the company state</label>
            <input asp-for="State" class="form-control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PostalCode" class="p-0">the company postal code</label>
            <input asp-for="PostalCode" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PhoneNumber" class="p-0">the company phone number</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border form-control">BACK</a>
            </div>
        </div>
    </div>
</form>
