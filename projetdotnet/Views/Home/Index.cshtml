@model IEnumerable<Product>

<style>
    .card {
        height: 300px; 
    }

        .card img {
            object-fit: cover;
            height: 100%; 
            width: 100%; 
            border-radius: 8px; 
        }
</style>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                    </div>
                    <div class="card-body pb-0">
                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                        <p class="card-title text-warning text-center">by <strong>@product.Author</strong></p>
                    </div>
                    <div class="card-body pb-0">
                        <p class="text-dark text-opacity-75 text-center">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                    </div>
                    <div class="card-body pb-0">
                        <p class="text-dark text-opacity-75 text-center">As low as : <span>@product.Price100.ToString("c")</span></p>
                    </div>
                    </div>
                </div>
            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                Details
            </a>
            </div>
    }
</div>
