
@model shoppingCart
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Article Details</title>

    <!-- Your custom styles -->
    <style>
        .form-control {
            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .quantity-input {
            max-width: 100px; /* Set a maximum width to prevent it from stretching too much */
        }
        /* Add your custom styles here */

        .article-details {
            margin: 20px;
        }

        .article-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .article-info {
            margin-top: 20px;
        }

        .article-table {
            margin-top: 20px;
        }

        .article-description {
            margin-top: 20px;
        }

        .quantity-input {
            width: 70px;
        }

        /* Updated styles */
        .right-section {
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }

            .right-section button {
                background-color: black;
                color: white;
            }
    </style>
</head>
<body>

    <div class="container article-details">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Product.ImageUrl" alt="Article Image" class="article-image">
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6 article-info">
                        <h3>@Model.Product.Title</h3>
                        <h6 class="card-title text-warning">by <strong>@Model.Product.Author</strong></h6>
                        <h6>Category: @Model.Product.Category?.Name</h6>
                        <p>ISBN: @Model.Product.ISBN</p>
                    </div>
                    <div class="col-md-6 article-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Quantity</th>
                                    <th>1-50</th>
                                    <th>+50</th>
                                    <th>+100</th>
                                </tr>
                  
                            </thead>
                            <tbody>
                                
                                <tr>
                                    <td>Price</td>
                                    <td>@Model.Product.ListPrice.ToString("c")</td>
                                    <td>@Model.Product.Price50.ToString("c")</td>
                                    <td>@Model.Product.Price100.ToString("c")</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 article-description">
                        <h3>Description:</h3>
                        <p>@Model.Product.Description</p>
                    </div>
                    <div class="col-md-6 right-section">
                        <label for="quantityToAdd">Quantity to Add:</label>
                        <form method="post">
                            <input hidden asp-for="ProductId" />
                            <input  asp-for="Count" type="number" id="quantityToAdd" class="form-control quantity-input" value="1" min="1">
                            <button class="btn btn-success btn-block">Add to Cart</button>
                            <a asp-action="Index" class="btn btn-dark btn-block mt-2">Back to Home</a>
                        </form>
                  
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
