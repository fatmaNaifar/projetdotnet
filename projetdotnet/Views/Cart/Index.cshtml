@model ShoppingCartVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }



        .cart-title {
            font-size: 24px;
            font-weight: bold;
            color: #000;
            margin-bottom: 20px;
        }

        .cart-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product {
            display: flex;
            margin-bottom: 20px;
        }

            .product img {
                max-width: 100px;
                margin-right: 20px;
            }

        .product-info {
            flex-grow: 1;
        }

        .product-actions {
            display: flex;
            align-items: center;
        }

        .total {
            margin-top: 20px;
            text-align: right;
            font-size: 18px;
        }

        button {
            background-color: #333;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #555;
            }

    </style>
</head>
<body>
    <div class="cart-title">shopping cart</div>
    <div class="cart-container">

        @foreach (var item in Model.ShoppingCartList)
        {
            <div class="product">
                <img src="@item.Product?.ImageUrl" class="rounded" width="100%" />
                <div class="product-info">
                    <h3 class="text-uppercase text-secondary"><strong>@item.Product.Title</strong></h3>
                    <p><small>@item.Product.Description</small></p>
                    <div class="product-actions col-12 col-lg-5 pt-2 pt-md-4">
                        <span>@item.Product.ListPrice.ToString("c")</span>
                    </div>
                    <div>
                        <span class="text-muted">Ordered quantity :</span>@item.Count
                    </div>

                    <a asp-action="Delete" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2"><i class="bi bi-trash3"></i></a>
                </div>

                <!-- Add more product entries as needed -->

            </div>
        }

        <!--<div class="total">
             Total:@Model.OrderTotal.ToString("c")
         </div>-->
        <button asp-controller="Home" asp-action="Index">Continuer le shopping</button>
        <button>Effectuer l'achat</button>
</body>
</html>