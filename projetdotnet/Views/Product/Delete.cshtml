@model Product
<form method="post">
    <input aasp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Product</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0">Product Title</label>
            <input asp-for="Title" type="text" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0">Product description</label>
            <input asp-for="Description" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0">Product ISBN</label>
            <input asp-for="ISBN" type="text" disabled class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0">Poduct author</label>
            <input asp-for="Author" disabled class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0">Poduct price</label>
            <input asp-for="ListPrice" disabled class="form-control" />
          
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-0">Poduct price+50</label>
            <input asp-for="Price50" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-0">Poduct price+100</label>
            <input asp-for="Price100" disabled class="form-control" />
          
        </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3">
                 <button type="submit" class="btn btn-danger form-control">Delete</button>
                 <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">BACK</a>
            </div>
        </div>
    </div>
</form>
